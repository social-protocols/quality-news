a:link.story-title {
  text-decoration: none;
  color: #000000;
}

a:visited.story-title {
  color: var(--text-dimmed);
}

.story-domain {
  font-size: 13px;
}
.story-domain,
.story-domain a:link,
.story-domain a:visited {
  color: var(--text-dimmed);
  text-decoration: none;
}
.story-domain a:hover {
  text-decoration: underline;
}

.story-details {
  font-size: 12px;
  color: var(--text-dimmed);
}
.story-details a:link,
.story-details a:visited {
  color: var(--text-dimmed);
  text-decoration: none;
}
.story-details a:hover {
  text-decoration: underline;
}

.upvoterate,
a:link.upvoterate,
a:visited.upvoterate {
  color: var(--text-blue);
}

.penalty,
a:link.penalty,
a:visited.penalty {
  color: var(--text-red);
}

.boost,
a:link.boost,
a:visited.boost {
  color: var(--text-green);
}

.rank-icon {
  display: inline-block;
  text-align: center;
  min-width: 2em;
  border-radius: 6px;
  padding-left: 2px;
  padding-right: 3px;
  padding-top: 1px;
  padding-bottom: 1px;
  /* negative margin reverts the height increase by the padding */
  margin-top: -1px;
  margin-bottom: -1px;
}

.rank-icon.hn {
  background-color: rgba(255, 102, 00, 0.2);
  color: #6c6c6c;
}

.rank-icon.qn {
  background-color: #cae2f4;
  color: #5a6266;
}

.original-age {
  text-decoration: line-through;
}

.resubmitted-age,
a:link.resubmitted-age,
a:visited.resubmitted-age {
  color: var(--text-green);
}

/* STATS */

.stats {
  margin-left: 5px;
  margin-right: 7px;
}

/* PLOTS */

#storyplots {
  height: auto;
  min-width: 400px;
  max-width: 650px;
}

.plot-description {
  margin-top: 2px;
  margin-bottom: 14px;
  margin-left: 50px;
  color: #303040;
}
